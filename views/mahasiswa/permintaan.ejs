        <script src="https://cdn.jsdelivr.net/npm/@preline/js/dist/preline.min.js"></script>
        <script>
            function toggleDropdown() {
                const dropdown = document.getElementById('dropdown');
                dropdown.classList.toggle('hidden');
            }
        
            function selectSurat(surat) {
                document.getElementById('nama-surat').value = surat;
                toggleDropdown();
            }
        
            function validateForm() {
                const namaSurat = document.getElementById('nama-surat').value.trim();
                const kodeSurat = document.getElementById('kode-surat').value.trim();
                const tujuanSurat = document.getElementById('tujuan-surat').value.trim();
                const deskripsi = document.getElementById('deskripsi').value.trim();
        
                let isValid = true;
        
                if (namaSurat === '') {
                    document.getElementById('error-nama-surat').classList.remove('hidden');
                    isValid = false;
                } else {
                    document.getElementById('error-nama-surat').classList.add('hidden');
                }
        
                if (kodeSurat === '') {
                    document.getElementById('error-kode-surat').classList.remove('hidden');
                    isValid = false;
                } else {
                    document.getElementById('error-kode-surat').classList.add('hidden');
                }
        
                if (tujuanSurat === '') {
                    document.getElementById('error-tujuan-surat').classList.remove('hidden');
                    isValid = false;
                } else {
                    document.getElementById('error-tujuan-surat').classList.add('hidden');
                }
        
                if (deskripsi === '') {
                    document.getElementById('error-deskripsi').classList.remove('hidden');
                    isValid = false;
                } else {
                    document.getElementById('error-deskripsi').classList.add('hidden');
                }
        
                return isValid;
            }
        
            document.addEventListener('DOMContentLoaded', function() {
                const form = document.getElementById('permintaanForm');
                const generatePDFButton = document.getElementById('generatePDFButton');
        
                form.addEventListener('submit', async function(event) {
                    event.preventDefault();
        
                    if (validateForm()) {
                        const formData = new FormData(form);
        
                        try {
                            const response = await fetch('/mahasiswa/permintaan', {
                                method: 'POST',
                                headers: {
                                    'Content-Type': 'application/json',
                                },
                                body: JSON.stringify({
                                    namaSurat: formData.get('namaSurat'),
                                    kodeSurat: formData.get('kodeSurat'),
                                    tujuan: formData.get('tujuan'),
                                    deskripsi: formData.get('deskripsi')
                                })
                            });
        
                            if (!response.ok) {
                                throw new Error('Gagal menyimpan data permintaan surat.');
                            }
        
                            const data = await response.json();
                            alert('Permintaan berhasil disimpan!');
        
                            generatePDFButton.disabled = false;
        
                            generatePDFButton.onclick = function() {
                                const url = new URL('/mahasiswa/generate-pdf', window.location.origin);
                                url.searchParams.append('nama', '<%= user.nama %>');
                                url.searchParams.append('nim', '<%= user.no_id %>');
                                url.searchParams.append('email', '<%= user.email %>');
                                url.searchParams.append('namaSurat', formData.get('namaSurat'));
                                url.searchParams.append('kodeSurat', formData.get('kodeSurat'));
                                url.searchParams.append('tujuan', formData.get('tujuan'));
                                url.searchParams.append('deskripsi', formData.get('deskripsi'));
                                window.open(url, '_blank');
                            };
                        } catch (error) {
                            console.error('Error:', error);
                            alert('Terjadi kesalahan: Gagal menyimpan data permintaan surat.');
                        }
                    }
                });
        
                        generatePDFButton.addEventListener('click', function() {
                    if (!generatePDFButton.disabled) {
                        const formData = new FormData(form);
                        const url = new URL('/mahasiswa/generate-pdf', window.location.origin);
                        url.searchParams.append('nama', '<%= user.nama %>');
                        url.searchParams.append('nim', '<%= user.no_id %>');
                        url.searchParams.append('email', '<%= user.email %>');
                        url.searchParams.append('namaSurat', formData.get('namaSurat'));
                        url.searchParams.append('kodeSurat', formData.get('kodeSurat'));
                        url.searchParams.append('tujuan', formData.get('tujuan'));
                        url.searchParams.append('deskripsi', formData.get('deskripsi'));
                        window.open(url, '_blank');
                    }
                });
            });
        </script>            
</body>
